{
  "name": "vara-mcp-server",
  "version": "0.4.3",
  "description": "MCP server for Vara Network smart program development with Sails",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vara-mcp": "./dist/cli.js",
    "vara-mcp-server": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vara-mcp/runtime": "workspace:*",
    "@vara-mcp/templates": "workspace:*",
    "@vara-mcp/chain": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Adityaakr/vara-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/Adityaakr/vara-mcp-server/issues"
  },
  "homepage": "https://github.com/Adityaakr/vara-mcp-server#readme",
  "keywords": [
    "vara",
    "vara-network",
    "gear",
    "sails",
    "mcp",
    "model-context-protocol",
    "smart-contracts",
    "blockchain",
    "cursor",
    "ai-assistant"
  ]
}
