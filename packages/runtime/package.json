{
  "name": "@vara-mcp/runtime",
  "version": "0.1.0",
  "description": "Safe runtime utilities for Vara MCP server",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./exec": {
      "types": "./dist/exec.d.ts",
      "import": "./dist/exec.js"
    },
    "./paths": {
      "types": "./dist/paths.d.ts",
      "import": "./dist/paths.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "import": "./dist/logger.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
